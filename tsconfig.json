{
    "compilerOptions": {
        "baseUrl": "src",
        "paths": {
            "@core/*": ["core/*"]
        },
        "outDir": "./dist/",
        "module": "commonjs",
        "strict": true,
        "target": "es6",
        "sourceMap": true,
        "noImplicitAny": true,
        "moduleResolution": "node"
    },
    "exclude": [
        "node_modules"
    ]
}
